container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/actiate && python app/manage.py makemigrations"
    command: "source /opt/python/run/venv/bin/activate && python app/manage.py migrate --noinput"
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python lpb/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "lpb.settings"
    "PYTHONPATH": "/opt/python/current/app/lpb:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: lpb/lpb/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"